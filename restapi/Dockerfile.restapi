# Dockerfile.restapi
FROM python:3.12.9-slim

WORKDIR /app

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
         ca-certificates curl \
    && rm -rf /var/lib/apt/lists/*

COPY requirements_restapi.txt ./
RUN pip install --no-cache-dir -r requirements_restapi.txt
COPY . /app

RUN mkdir -p /data    
VOLUME ["/data"]

EXPOSE 8000

CMD ["gunicorn", "-w", "1", "--threads", "4", "--timeout", "60", "-b", "0.0.0.0:8000", "app_fs:app"]
